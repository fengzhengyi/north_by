<%= turbo_stream.append('favorite-concert-list') do %>
  <%= render(favorite, animate_in: true) %>
<% end %>
<%= turbo_stream.replace(dom_id(favorite.concert)) do %>
  <%= render(favorite.concert, user: user) %>
<% end %>
<%= turbo_stream.update('no-favorites') do %>
<% end %>
<%= turbo_stream.update('favorites-count') do %>
  <%= user&.favorites&.count || 0 %>
<% end %>