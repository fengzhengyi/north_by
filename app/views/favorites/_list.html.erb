<%= turbo_frame_tag("favorite_concerts") do %>
  <section class="my-4"
           data-controller="favorite-toggle"
           data-favorite-toggle-visible-value="true">
    <div class="flex gap-3">
      <div class="text-3xl font-bold">Favorite concerts</div>
      <button class="<%= SimpleForm.button_class %>"
              data-favorite-toggle-target="elementWithText"
              data-action="click->favorite-toggle#toggle">
        Hide
      </button>
    </div>
    <div data-favorite-toggle-target="elementToHide">
      <div class="text-xl font-bold" id="no-favorites">
        <% if current_user.favorites.empty? %>
          No favorite concerts yet
        <% end %>
      </div>

      <div id="favorite-concert-list">
        <% current_user.favorites.each do |favorite| %>
          <%= render(favorite) %>
        <% end %>
      </div>
    </div>

  </section>
<% end %>